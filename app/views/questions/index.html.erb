
<ul class="list-unstyled">
  <% @questions.each do |question| %>
    <li>
      <div>
        <h6>問題<%= question.id %></h6>
        <%= question.question %>
      </div>
      <div>
        <%= link_to '> 詳細へ', question_answer_path(question.id) %>
        <ul class="dropdown-divider"></ul>
      </div>
    </li>
  <% end %>
</ul>

<%= paginate @questions %>